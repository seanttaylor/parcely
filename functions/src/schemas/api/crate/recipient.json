{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://schemas.parcely.com/api/recipient.json?version=0.0.1",
    "type": "object",
    "title": "The Recipient schema",
    "description": "The API schema use for validating the association of new recipients with crates",
    "default": {},
    "examples": [
        {
            "recipientEmail": "thor@avengers.io"
        }
    ],
    "required": [
        "recipientEmail"
    ],
    "properties": {
        "recipientEmail": {
            "$id": "#/properties/recipientEmail",
            "type": "string",
            "title": "The recipientEmail schema",
            "description": "The email address of a recipient for a specified crate",
            "default": "",
            "examples": [
                "thor@avengers.io"
            ]
        }
    },
    "additionalProperties": false
}