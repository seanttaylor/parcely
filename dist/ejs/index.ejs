<html>
   <head>
      <title>Parcely | Simple real-time logistics</title>
      <link rel="stylesheet" href="./css/main.css">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
      <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
   </head>
   <body id="parcely" style="margin: 0px;">
      <div class="header">
         <a href="#default" class="logo">Parcely.Cerebro</a>
         <div class="header-right">
            <p>v0.0.1</p>
         </div>
      </div><!---.header--->
      <div>
         <div class="columns">
            <div id="simulation-summary" class="column is-one-fifth">
               <div class="sidenav">
                  <form action="" id="simulation-metadata" style="margin: 15px;">
                     <label for="simulations">Simulation name:</label>
                     <br>
                     <select name="simulations" id="simulation-selector">
                        <option value="default" data-sim-id="default" data-sim-name="default" selected >---</option>
                        <% data.simulations.forEach((sim) => { %>
                            <option data-sim-id=<%=sim.id%> data-sim-name=<%=sim.name%> value="<%=sim.name%>"><%=sim.name%></option>
                        <%})%>  
                     </select>
                     <br><br>
                     <label for="simuluation-id">id:</label>
                     <br>
                     <input type="text" id="simulation-id" value="n/a" name="simulation-id" style="width: 305px;" disabled>
                     <br>
                     <br>
                     <label for="created-date">createdDate:</label>
                     <br>
                     <input type="text" id="created-date" name="created-date" value="n/a" style="width: 305px;" disabled>
                     <br>
                     <br>
                     <label for="crates">crates:</label>
                     <br>
                     <select name="crates" id="crate-list" style="width: 305px;" disabled>
                        <option value="---" selected >---</option>
                     </select>
                     <br><br>
                     <label for="status">status:</label>
                     <br>
                     <input type="text" value="n/a" id="status" name="status" disabled><br><br>
                     <label for="instance-count">instanceCount:</label>
                     <br>
                     <input type="text" value="0" id="instance-count" name="instance-count" style="width: 36px;" disabled>
                    <br>
                    <br>
                    <br>
                    <div class="buttons has-addons is-centered " style="margin-left: -30px;">
                        <button id="start-simulation-button" class="button" disabled>Start</button>
                        <button id="stop-simulation-button" class="button" disabled>Stop</button>
                    </div>
                  </form>
               </div>
               <!---#sidenav--->
            </div>
            <!---#simulation-summary---> 
            <div class="column">
               <div class="main">
                  <div class="block"></div>
                  <div class="box">
                     <div class="container">
                        <section id="simulation-viewer"></section>
                        <div id="map"></div>
                        <section id="empty-state" class="hero is-medium">
                           <div class="hero-body">
                              <div class="">
                                 <p class="title">
                                    Create a new simulation
                                 </p>
                                 <p class="subtitle">
                                    or select an existing simulation from the sidebar
                                 </p>
                              </div>
                           </div>
                        </section>
                     </div>
                  </div>
                  <button id="create-sim-button" class="button is-primary">Create a new simulation</button>
               </div>
               <div id="modal" class="modal">
                <div class="modal-background"></div>
                <div class="modal-card">
                  <header class="modal-card-head">
                    <p class="modal-card-title">Create simulation</p>
                    <button id="modal-close-button" class="delete" aria-label="close"></button>
                  </header>
                  <section class="modal-card-body">
                    <form action="" id="simulation-config" style="margin: 15px;">
                        <label for="instance-count">Instance count:</label>
                        <br>
                        <select name="instances" id="instance-selector">
                           <option value="1" selected >1</option>
                           <option value="2">2</option>
                           <option value="3">3</option>
                           <option value="4">4</option>
                           <option value="5">5</option>
                           <option value="6">6</option>
                           <option value="7">7</option>
                           <option value="8">8</option>
                        </select>
                        <br><br>
                        <label for="interval-millis">Interval (milliseconds):</label>
                        <br>
                        <input type="text" id="interval-millis" value="15000" name="interval-millis" style="width: 60px;">
                        <br>
                        <br>
                     </form>
                  </section>
                  <footer class="modal-card-foot">
                    <button id="create-button" class="button is-success">Create</button>
                  </footer>
                </div>
              </div><!--#modal-->
             
              
            </div><!---#main--->
         </div>
         <!--- #columns --->
      </div>
      </div>
    
      <script type="application/json" id="data-block">
          <%-JSON.stringify(data.simulations)%>
      </script>
      <script src="./js/index.js" type="module"></script>     
   </body>
</html>